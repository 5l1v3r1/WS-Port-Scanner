<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss}{GMT+0} [%t] %-5level: %c{1} - %msg%n%throwable"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="de.rub.nds.modifiablevariable" level="ERROR"/>
        <Logger name="DirectLogger" level="OFF"/>
        <Logger name="ConsoleLogger" level="OFF"/>
        <Logger name="de.rub.nds.port" level="WARN"/>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
